

TOMCAT_INSTALL_LOCATION:=/opt/tomcat9

TOMCAT_MAJOR_VER:=9
TOMCAT_MINOR_VER:=0.37
TOMCAT_VER:=$(TOMCAT_MAJOR_VER).$(TOMCAT_MINOR_VER)
TOMCAT_SRC:=apache-tomcat-$(TOMCAT_VER).tar.gz
TOMCAT_URL:="https://downloads.apache.org/tomcat/tomcat-$(TOMCAT_MAJOR_VER)/v$(TOMCAT_VER)/bin/$(TOMCAT_SRC)"

TOMCAT_SYSTEMD:=tomcat.service
